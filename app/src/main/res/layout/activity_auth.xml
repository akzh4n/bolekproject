<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplepink"
    android:padding="-10dp"
    tools:context=".AuthActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/armata"
            android:text="На ваш номер поступит SMS с кодом для подтверждения пользователя."
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/armata"
            android:text="КОД:"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editVerification"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="130dp"
            android:ems="10"
            android:fontFamily="@font/armata"
            android:inputType="number"
            android:paddingLeft="50dp"
            android:paddingTop="80dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="285dp"
            android:fontFamily="@font/armata"
            android:text="Прислать еще раз"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogin1"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="340dp"
            android:backgroundTint="@color/PurpleNeed"
            android:fontFamily="@font/armata"
            android:text="OK"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>