<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplepink"
    tools:context=".AboutUsActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/armata"
            android:text="Тариф"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/armata"
            android:text="Безлимит 2990"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/prog1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/progressgigy" />

        <ImageView
            android:id="@+id/prog2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/progressgigy" />

        <ImageView
            android:id="@+id/prog3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/progressgigy" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/armata"
            android:text="16 ГБ"
            android:textColor="@color/PinkNeed"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/armata"
            android:text="100 мин"
            android:textColor="@color/PinkNeed"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="257dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/armata"
            android:text="50 SMS"
            android:textColor="@color/PinkNeed"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/armata"
            android:text="Связь"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="265dp"
            android:drawableStart="@drawable/ic_support"
            android:drawablePadding="15dp"
            android:fontFamily="@font/armata"
            android:text="Служба поддержки"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="310dp"
            android:drawableStart="@drawable/ic_admin"
            android:drawablePadding="15dp"
            android:fontFamily="@font/armata"
            android:text="Консультант"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/PurpleNeed"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_nagivation" />

</RelativeLayout>