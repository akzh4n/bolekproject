<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplepink"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/topuserinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/armata"
        android:text="Пользователь:"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/userCardInfo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@id/topuserinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/PurpleNeed"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">

        <TextView
            android:id="@+id/usernameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="15dp"
            android:fontFamily="@font/armata"
            android:text="Акжан Калиматов"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <View
            android:id="@+id/view"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="65dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/phoneView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:fontFamily="@font/armata"
            android:text="+7 775 973 67 85 "
            android:textColor="@color/white"
            android:textSize="21dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="115dp"
            android:background="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/balanceinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userCardInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/armata"
        android:text="Баланс:"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/balanceCardInfo"
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:layout_below="@id/balanceinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/PurpleNeed"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp">

        <TextView
            android:id="@+id/balancetenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/armata"
            android:text="0 ₸"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginLeft="127.5dp"
            android:layout_marginTop="85dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/armata"
            android:text="Безлимит 2990"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/PurpleNeed"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_nagivation" />

</RelativeLayout>